<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GaneshPageThree"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/ganeshPageThree"
        android:layout_width="298dp"
        android:layout_height="457dp"
        android:layout_marginTop="10dp"
        android:text="जय गणेश जय गणेश,
                                                    जय गणेश देवा ।
                                    माता जाकी पार्वती,
                                                पिता महादेवा ॥
                                        'सूर' श्याम शरण आए,
                                            सफल कीजे सेवा ।
                                        माता जाकी पार्वती,
                                                            पिता महादेवा ॥

                                            जय गणेश जय गणेश,

                                                        जय गणेश देवा ।
                                                माता जाकी पार्वती,
                                                पिता महादेवा ॥"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ripple_demo"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ganeshPageThree"
        app:layout_constraintVertical_bias="0.163" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/ripple_demo"
        android:text="back"
        app:layout_constraintBaseline_toBaselineOf="@+id/home"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>