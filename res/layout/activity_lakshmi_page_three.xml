<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LakshmiPageThree"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/lakshmiPageThree"
        android:layout_width="317dp"
        android:layout_height="501dp"
        android:layout_marginTop="10dp"
        android:text="शुभ गुण मंदिर सुंदर,
                                            क्षीरोदधि जाता ।
                                                        रत्न चतुर्दश तुम बिन,
                                                        कोई नहीं पाता ॥


                                                        ॥ॐ जय लक्ष्मी माता...॥



                                महालक्ष्मी जी की आरती,
                    जो कोई नर गाता ।


                                                         उँर आंनद समाता,
                                                        पाप उतर जाता ॥
                                                        ॥ॐ जय लक्ष्मी माता...॥"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ripple_demo"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lakshmiPageThree"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="back"
        app:layout_constraintBaseline_toBaselineOf="@+id/home"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ripple_demo"/>
</androidx.constraintlayout.widget.ConstraintLayout>